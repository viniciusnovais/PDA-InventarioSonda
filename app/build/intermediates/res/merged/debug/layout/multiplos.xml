<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundopreto" >

    <Button
        android:id="@+id/btnEntrarMult"
        android:layout_width="110dp"
        android:layout_height="47dp"
        android:layout_x="98dp"
        android:layout_y="81dp"
        android:background="@drawable/selector_button"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="@string/inventario_ok"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etColetaMult"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_x="63dp"
        android:layout_y="57dp"
        android:digits="0123456789."
        android:background="@android:color/white"
        android:backgroundTint="@color/switch_thumb_normal_material_dark"
        android:backgroundTintMode="add"
        android:ems="10"
        android:inputType="number"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="63dp"
        android:layout_y="30dp"
        android:text="@string/contagem_tvQuantidade"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white" />

</AbsoluteLayout>